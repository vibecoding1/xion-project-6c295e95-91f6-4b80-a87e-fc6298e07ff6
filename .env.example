# Environment variables for Xion Stack

# General
NEXT_PUBLIC_APP_NAME="John Smith Portfolio"
NEXT_PUBLIC_APP_DESCRIPTION="John Smith's modern and vibrant personal portfolio landing page."
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Feature Flags
NEXT_PUBLIC_ENABLE_AUTH=false
NEXT_PUBLIC_ENABLE_DATABASE=false
NEXT_PUBLIC_ENABLE_PAYMENTS=false
NEXT_PUBLIC_ENABLE_REALTIME=false
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=false
NEXT_PUBLIC_ENABLE_EMAIL=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=false

# Supabase (if NEXT_PUBLIC_ENABLE_DATABASE=true or NEXT_PUBLIC_ENABLE_AUTH=true)
NEXT_PUBLIC_SUPABASE_URL=""
NEXT_PUBLIC_SUPABASE_ANON_KEY=""
SUPABASE_SERVICE_ROLE_KEY="" # Used for server-side operations, keep secret

# Stripe (if NEXT_PUBLIC_ENABLE_PAYMENTS=true)
STRIPE_SECRET_KEY=""
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""

# Email (if NEXT_PUBLIC_ENABLE_EMAIL=true)
# Example: SendGrid, Resend, Nodemailer config
EMAIL_SERVER_HOST=""
EMAIL_SERVER_PORT=""
EMAIL_SERVER_USER=""
EMAIL_SERVER_PASSWORD=""
EMAIL_FROM="" # e.g., "noreply@yourdomain.com"
EMAIL_TO="" # e.g., "your-email@yourdomain.com" for contact forms

# File Upload (if NEXT_PUBLIC_ENABLE_FILE_UPLOAD=true)
# Configure storage provider (e.g., AWS S3, Cloudinary, Supabase Storage)
FILE_UPLOAD_PROVIDER="supabase" # or "aws", "cloudinary"
AWS_S3_ACCESS_KEY_ID=""
AWS_S3_SECRET_ACCESS_KEY=""
AWS_S3_REGION=""
AWS_S3_BUCKET_NAME=""
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# Analytics (if NEXT_PUBLIC_ENABLE_ANALYTICS=true)
NEXT_PUBLIC_ANALYTICS_ID="" # e.g., Google Analytics ID

# Notifications (if NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true)
# Configure notification provider (e.g., Pusher, OneSignal)
NOTIFICATION_PROVIDER=""
NOTIFICATION_API_KEY=""
NOTIFICATION_APP_ID=""
